<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="main"
            type="com.example.demon_slayer_lookalike.view.component.main.MainActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.component.main.MainActivity"
        android:orientation="vertical"
        android:background="@color/background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="귀멸의 칼날 닮은 꼴 찾기"
            android:textSize="44sp"
            android:textColor="@color/white"
            android:fontFamily="@font/kim"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="50dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/addPhoto"
            android:fontFamily="@font/kim"
            android:background="@color/transparent"
            android:textColor="@color/white"
            android:onClick="picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/img"
            app:layout_constraintEnd_toEndOf="@id/img"
            app:layout_constraintTop_toTopOf="@id/img"
            app:layout_constraintBottom_toBottomOf="@id/img"
            android:text="사진등록"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="100dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:visibility="gone"
            android:id="@+id/rePhoto"
            android:fontFamily="@font/kim"
            android:background="@color/transparent"
            android:textColor="@color/white"
            android:onClick="picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img"
            android:layout_marginTop="30dp"
            android:text="다시 찍기"
            android:textSize="22sp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:fontFamily="@font/kim"
            android:background="@color/transparent"
            android:textColor="@color/white"
            android:onClick="result"
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="80dp"
            android:text="결과"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="100dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:fontFamily="@font/kim"
            android:background="@color/transparent"
            android:textColor="@color/red"
            android:onClick="back"
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="80dp"
            android:text="처음으로"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>