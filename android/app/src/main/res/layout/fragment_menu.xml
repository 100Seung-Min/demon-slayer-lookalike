<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="menuFragment"
            type="com.example.demon_slayer_lookalike.view.component.menu.MenuFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/demonSlayerBtn"
                    android:layout_width="200dp"
                    android:layout_height="250dp"
                    android:background="@drawable/poster_demonslayer"
                    android:onClick="@{menuFragment::onClick}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/ghibriBtn"
                    android:layout_width="200dp"
                    android:layout_height="250dp"
                    android:background="@drawable/poster_ghibri"
                    android:onClick="@{menuFragment::onClick}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/demonSlayerBtn"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/shinChanBtn"
                    android:layout_width="200dp"
                    android:layout_height="250dp"
                    android:background="@drawable/poster_shin_chan"
                    android:onClick="@{menuFragment::onClick}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/ghibriBtn"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/doraemonBtn"
                    android:layout_width="200dp"
                    android:layout_height="250dp"
                    android:background="@drawable/poster_doraemon"
                    android:onClick="@{menuFragment::onClick}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/shinChanBtn"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/conanBtn"
                    android:layout_width="200dp"
                    android:layout_height="250dp"
                    android:background="@drawable/poster_conan"
                    android:onClick="@{menuFragment::onClick}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/doraemonBtn"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </HorizontalScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>