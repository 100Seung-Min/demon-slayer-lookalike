<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="quizFragment"
            type="com.example.demon_slayer_lookalike.view.component.quiz.QuizFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <TextView
            android:id="@+id/titleTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/kim"
            android:text="이 캐릭터의 이름은 뭘까요"
            android:textColor="@color/white"
            android:textSize="44sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@color/darkBlue"
            app:layout_constraintTop_toBottomOf="@id/titleTxt"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:id="@+id/easyAnswerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/img"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/firstAnswer"
                android:onClick="@{quizFragment::onClick}"
                android:background="@drawable/bg_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/secondAnswer"
                android:onClick="@{quizFragment::onClick}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_button"
                android:layout_marginTop="10dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/thirdAnswer"
                android:onClick="@{quizFragment::onClick}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_button"
                android:layout_marginTop="10dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/forthAnswer"
                android:onClick="@{quizFragment::onClick}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_button"
                android:layout_marginTop="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/hardAnswerLayout"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/answerInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kim"
                android:textSize="21sp"
                android:maxLines="1"
                android:singleLine="true"
                android:paddingVertical="10dp"
                android:hint="정답을 입력해주세요"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/submitBtn"
                android:fontFamily="@font/kim"
                android:text="제출"
                android:textSize="32sp"
                android:layout_marginTop="20dp"
                android:onClick="@{quizFragment::onClick}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_button"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>