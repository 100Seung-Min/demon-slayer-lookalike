<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="startFragment"
            type="com.example.demon_slayer_lookalike.view.component.start.StartFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/contents1Top"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.15"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/contents2Bottom"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.55"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="오늘의 캐릭터"
            android:fontFamily="@font/kim"
            android:textSize="54sp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/contents1Top"
            android:layout_marginBottom="15dp"/>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/darkBlue"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toTopOf="@id/contents1Top"
            app:layout_constraintBottom_toBottomOf="@id/contents2Bottom"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/poster_main"
            app:layout_constraintStart_toStartOf="@id/view"
            app:layout_constraintEnd_toEndOf="@id/view"
            app:layout_constraintTop_toTopOf="@id/view"
            app:layout_constraintBottom_toTopOf="@id/moveMenuBtn"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="20dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/moveMenuBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:fontFamily="@font/kim"
            android:text="닮은 꼴 찾으러 가기"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@id/view"
            app:layout_constraintEnd_toEndOf="@id/view"
            app:layout_constraintBottom_toBottomOf="@id/view"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_button"
            android:onClick="@{startFragment::onClick}"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>