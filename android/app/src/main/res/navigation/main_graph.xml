<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/faceFragment"
        android:name="com.example.demon_slayer_lookalike.view.component.face.FaceFragment"
        android:label="DemonSlayerFragment"
        tools:layout="@layout/fragment_face">
        <action
            android:id="@+id/action_faceFragment_to_resultFragment"
            app:destination="@id/resultFragment" />
        <argument
            android:name="type"
            app:argType="string"
            android:defaultValue="귀멸의 칼날" />
    </fragment>
    <fragment
        android:id="@+id/resultFragment"
        android:name="com.example.demon_slayer_lookalike.view.component.result.ResultFragment"
        android:label="ResultFragment"
        tools:layout="@layout/fragment_result">
        <argument
            android:name="maxPos"
            android:defaultValue="0"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/startFragment"
        android:name="com.example.demon_slayer_lookalike.view.component.start.StartFragment"
        android:label="StartFragment"
        tools:layout="@layout/fragment_start">
        <action
            android:id="@+id/action_startFragment_to_menuFragment"
            app:destination="@id/menuFragment" />
    </fragment>
    <fragment
        android:id="@+id/menuFragment"
        android:name="com.example.demon_slayer_lookalike.view.component.menu.MenuFragment"
        android:label="MenuFragment"
        tools:layout="@layout/fragment_menu" >
        <action
            android:id="@+id/action_menuFragment_to_faceFragment"
            app:destination="@id/faceFragment" />
    </fragment>
</navigation>