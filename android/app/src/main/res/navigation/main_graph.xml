<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/faceFragment"
        android:name="com.example.demon_slayer_lookalike.view.component.face.FaceFragment"
        android:label="DemonSlayerFragment"
        tools:layout="@layout/fragment_face">
        <action
            android:id="@+id/action_faceFragment_to_resultFragment"
            app:destination="@id/resultFragment" />
        <argument
            android:name="type"
            app:argType="string"
            android:defaultValue="귀멸의 칼날" />
    </fragment>
    <fragment
        android:id="@+id/resultFragment"
        android:name="com.example.demon_slayer_lookalike.view.component.result.ResultFragment"
        android:label="ResultFragment"
        tools:layout="@layout/fragment_result">
        <argument
            android:name="maxPos"
            android:defaultValue="0"
            app:argType="integer" />
        <argument
            android:name="type"
            app:argType="string"
            android:defaultValue="귀멸의 칼날" />
    </fragment>
    <fragment
        android:id="@+id/startFragment"
        android:name="com.example.demon_slayer_lookalike.view.component.start.StartFragment"
        android:label="StartFragment"
        tools:layout="@layout/fragment_start">
        <action
            android:id="@+id/action_startFragment_to_menuFragment"
            app:destination="@id/menuFragment" />
        <action
            android:id="@+id/action_startFragment_to_quizStartFragment"
            app:destination="@id/quizStartFragment" />
    </fragment>
    <fragment
        android:id="@+id/menuFragment"
        android:name="com.example.demon_slayer_lookalike.view.component.menu.MenuFragment"
        android:label="MenuFragment"
        tools:layout="@layout/fragment_menu" >
        <action
            android:id="@+id/action_menuFragment_to_faceFragment"
            app:destination="@id/faceFragment" />
    </fragment>
    <fragment
        android:id="@+id/quizStartFragment"
        android:name="com.example.demon_slayer_lookalike.view.component.quiz.QuizStartFragment"
        android:label="QuizStartFragment"
        tools:layout="@layout/fragment_quiz_start">
        <action
            android:id="@+id/action_quizStartFragment_to_quizFragment"
            app:destination="@id/quizFragment" />
    </fragment>
    <fragment
        android:id="@+id/quizFragment"
        android:name="com.example.demon_slayer_lookalike.view.component.quiz.QuizFragment"
        android:label="QuizFragment"
        tools:layout="@layout/fragment_quiz">
        <action
            android:id="@+id/action_quizFragment_self"
            app:destination="@id/quizFragment"
            app:popUpTo="@id/quizStartFragment"/>
        <argument
            android:name="position"
            app:argType="integer"
            android:defaultValue="0" />
        <action
            android:id="@+id/action_quizFragment_to_quizResultFragment"
            app:destination="@id/quizResultFragment"
            app:popUpTo="@id/quizStartFragment"/>
    </fragment>
    <fragment
        android:id="@+id/quizResultFragment"
        android:name="com.example.demon_slayer_lookalike.view.component.quiz.QuizResultFragment"
        android:label="QuizResultFragment"
        tools:layout="@layout/fragment_quiz_result"/>
</navigation>